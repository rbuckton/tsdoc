{
  "name": "@microsoft/tsdoc",
  "version": "0.12.17",
  "description": "A parser for the TypeScript doc comment syntax",
  "keywords": [
    "TypeScript",
    "documentation",
    "doc",
    "comments",
    "JSDoc",
    "parser",
    "standard"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/tsdoc"
  },
  "homepage": "https://github.com/microsoft/tsdoc",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@rushstack/eslint-config": "0.4.0",
    "@types/jest": "24.0.16",
    "eslint": "^6.0.0",
    "jest": "~24.8.0",
    "prettier": "~1.18.2",
    "pretty-format": "^24.9.0",
    "rimraf": "~2.6.3",
    "ts-jest": "~24.0.2",
    "typescript": "~3.5.3"
  },
  "scripts": {
    "build": "node ./build.js",
    "test": "jest",
    "watch": "jest --watch",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\"",
    "generate-commonmark-tests": "node ./scripts/generateTests.js scripts/spec_commonmark.json src/beta/parser/__tests__/commonmark.test.ts",
    "generate-gfm-tests": "node ./scripts/generateTests.js scripts/spec_gfm.json src/beta/parser/__tests__/gfm.test.ts --gfm",
    "generate-tests": "npm run generate-commonmark-tests && npm run generate-gfm-tests"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  }
}
